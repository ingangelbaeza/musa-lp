---
const { img } = Astro.props;
const { name } = Astro.props;
const { position } = Astro.props;
---

<div class="text-center">
    <img
        class="rounded-xl sm:size-48 lg:size-60 mx-auto"
        src={img}
        alt="miembro del equipo"
    />
    <div class="mt-2 sm:mt-4">
        <h3 class="text-sm font-medium text-gray-800 sm:text-base lg:text-lg">
            {name}
        </h3>
        <p class="text-xs text-gray-600 sm:text-sm lg:text-base">
            {position}
        </p>
    </div>
</div>
